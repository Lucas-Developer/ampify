import os
import sys
import subprocess

from os.path import dirname, join as join_path, realpath

AMPIFY_ROOT = dirname(realpath(__file__))
WAF = join_path(AMPIFY_ROOT, 'environ', 'waf')

sys.exit(subprocess.call([sys.executable, WAF, 'configure'] + sys.argv[1:]))
