#! /usr/bin/env ruby

# Public Domain (-) 2010-2011 The Ampify Authors.
# See the Ampify UNLICENSE file for details.

require 'pathname'

MAIN_ROOT = Pathname.new(__FILE__).realpath.dirname.dirname
$:.unshift MAIN_ROOT.join('third_party', 'sass', 'lib')

require 'sass'
require 'sass/exec'

if ARGV.length == 0
    ARGV << "--help"
elsif not ARGV.include? "--cache-location"
    ARGV.unshift "--cache-location", MAIN_ROOT.join('.sass-cache').to_s
end

opts = Sass::Exec::Sass.new(ARGV)
opts.parse!
