require File.join(File.dirname(__FILE__), 'rubylibs')
require 'haml/exec'

if ARGV.length == 0
    ARGV << "--help"
elsif not ARGV.include? "--cache-location"
    ARGV.unshift "--cache-location", MAIN_ROOT.join('.sass-cache').to_s
end

opts = Haml::Exec::Sass.new(ARGV)
opts.parse!
