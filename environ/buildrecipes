# bsdiff
# ------------------------------------------------------------------------------

def install_bsdiff():
    copy('bsdiff', join(BIN, 'bsdiff'))
    copy('bspatch', join(BIN, 'bspatch'))

RECIPES['bsdiff'] = [{
    'requires': ['bzip2'],
    'version': '4.3',
    'hash': '6f43c5246cdb60e58134144b72328918eb4a23c2a28880914f3431a76fbf657b',
    'after': install_bsdiff,
    'commands': [
        [MAKE],
        ]
    }]

