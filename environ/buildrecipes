# ------------------------------------------------------------------------------
# pyutil
# ------------------------------------------------------------------------------

PYUTIL_PYX_FILES = glob(join(SRC, 'pyutil', '*.pyx'))
if PLATFORM != 'darwin':
    PYUTIL_PYX_FILES.remove(join(SRC, 'pyutil', 'darwinsandbox.pyx'))

PYUTIL_SO_FILES = [
    file.rsplit('.pyx', 1)[0] + '.so' for file in PYUTIL_PYX_FILES
    ]

RECIPES['pyutil'] = [{
    'requires': ['python'],
    'type': 'makelike',
    'before': lambda: chdir(SRC),
    'depends': PYUTIL_PYX_FILES + [join(ROOT, 'src', 'setup.py')],
    'outputs': PYUTIL_SO_FILES,
    'after': lambda: rmdir('build'),
    'generators': [
        lambda: [remove(path) for path in PYUTIL_SO_FILES if isfile(path)],
        [sys.executable, 'setup.py', 'build_ext', '-i']
        ]
    }]

